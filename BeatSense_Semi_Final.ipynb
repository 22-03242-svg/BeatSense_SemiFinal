    first_r = r_peaks[:num_beats_to_plot]

    # Determine sample range to extract around these beats
    start_sample = max(0, first_r[0] - 200)
    end_sample = min(len(signal_f), first_r[-1] + 200)

    # Subset signals for plotting
    signal_raw_20 = signal[start_sample:end_sample]
    signal_f_20   = signal_f[start_sample:end_sample]

    # Adjust R-peaks for local plotting window
    r_local = first_r - start_sample

    # --- Plot 1: Raw vs Filtered ECG (First 20 Beats) ---
    plt.figure(figsize=(12, 4))
    plt.plot(signal_raw_20, label='Raw Signal', alpha=0.7)
    plt.plot(signal_f_20, label='Filtered Signal (0.5–40 Hz)', alpha=0.7)
    plt.scatter(r_local, signal_f_20[r_local], color='red', label='R-peaks')
    plt.title("Raw vs Filtered ECG (First 20 Beats)")
    plt.xlabel("Samples")
    plt.ylabel("Amplitude (mV)")
    plt.legend()
    plt.tight_layout()
    plt.show()

    # --- Compute Heart Rate only for first 20 beats ---
    rr_intervals_20 = np.diff(first_r) / fs
    heart_rate_20 = 60 / rr_intervals_20

    # --- Plot 2: Heart Rate (First 20 Beats) ---
    plt.figure(figsize=(12, 4))
    plt.plot(heart_rate_20, marker='o', linestyle='-', alpha=0.8)
